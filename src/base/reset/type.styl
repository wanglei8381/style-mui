// box-sizing，不直接对所有元素设置
// -------------------------
.uniform-box-sizing {
  &,
  *,
  *:before,
  *:after {
    box-sizing: border-box
  }
}

// Body reset

html {
// 不设置字体大小，在body中设置
// font-size: 12px;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

body {
  font: $web-font-base;
  color: $text-color;
  background-color: $body-bg;
}

// 重设form表单元素
input,
button,
select,
textarea {
  font-family: inherit;
  font-size: inherit;
  line-height: inherit;
}

// Horizontal rules
hr {
  margin-top: $line-height-computed;
  margin-bottom: $line-height-computed;
  border: 0;
  border-top: 1px solid $gray-light;
}

// Headings，不直接对h标签设置
// -------------------------

.h1, .h2, .h3, .h4, .h5, .h6 {
  font-family: inherit;
  font-weight: 500;
  line-height: 1.1;
  color: inherit;

  small,
  .small {
    font-weight: normal;
    line-height: 1;
    color: inherit;
  }
}

.h1,
.h2,
.h3 {
  margin-top: $line-height-computed;
  margin-bottom: ($line-height-computed / 2);

  small,
  .small {
    font-size: 65%;
  }
}

.h4,
.h5,
.h6 {
  margin-top: ($line-height-computed / 2);
  margin-bottom: ($line-height-computed / 2);

  small,
  .small {
    font-size: 75%;
  }
}

.h1 {
  font-size: $font-size-h1;
}

.h2 {
  font-size: $font-size-h2;
}

.h3 {
  font-size: $font-size-h3;
}

.h4 {
  font-size: $font-size-h4;
}

.h5 {
  font-size: $font-size-h5;
}

.h6 {
  font-size: $font-size-h6;
}

// Lists
// -------------------------

// Unordered and Ordered lists
ul,
ol {
  margin-top: 0;
  margin-bottom: 0;
}

// List options

.list-unstyled {
  padding-left: 0;
  list-style: none;
}

// 行内元素
.list-inline {
  @extend .list-unstyled;

  > li {
    display: inline-block;
  }
}

// Links
a {
  &,
  &:link,
  &:visited {
    color: $link-color;
    text-decoration: none;
  }
  &:hover,
  &:active {
    color: $link-hover-color;
    text-decoration: none;
  }
}
